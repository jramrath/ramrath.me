doctype html5
head
    include ./template/head.pug
    link(rel="stylesheet", href="/css/category.css")
    title= category + "- ramrath.me"

header
    include ./template/header.pug

main 
    section.category-details 
        h1.category-name= allCategories[category]

        if projectsInCategory != ""
            p= "All projects in the category " + allCategories[category] + "!"
        else 
            p= "No project was found in the category " + allCategories[category] + "!"

        a(href="/categories")= "All categories"
    
    hr.seperator

    section.projects 
  
        each project in projectsInCategory

            a.project-preview(href=project.dir)
                section.description 
                    h2= project.details["name"]
                    p= project.details["description"]

                    .categories
                        each category in project.categories
                            span= category.replace(/^\w/, (c) => c.toUpperCase())

                section.picture 
                    img(src= project.details["titleImagePath"], alt="title-image")


footer
  include ./template/footer.pug