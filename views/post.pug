doctype html5
head
  include ./template/head.pug
  link(rel="stylesheet", href="/css/post.css")
  link(rel="stylesheet", href="/css/code.css")
  title= project.details["name"] + " - " + "#" + post.details["slug"] + ": " + post.details["name"]


header
  include ./template/header.pug


main 
  .post-details
    h1
      span.project= project.details["name"]
      span.blog= "#" + post.details["slug"] + ": " + post.details["name"]
    span.date= post.details["creationDate"]
    

  - var path = path
  |!{include(path)}

  if nextPost != ""
    .nextPostButton
      a(href= nextPost.dir)=  "Next Post 〉〉 #" + nextPost.details["slug"] + " " + nextPost.details["name"]


footer
  include ./template/footer.pug