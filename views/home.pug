doctype html5
head
  include ./template/head.pug
  link(rel="stylesheet", href="/css/home.css")
  link(rel="stylesheet", href="/css/post-overview.css")
  title ramrath.me

header
  include ./template/header.pug

main 
  section.title
    h1 Welcome
    h2 Placeholder text! Check out
      | 
      a(href="/about") /about
      | !

  hr

  section.posts
    each post in recentPosts

      a(href= post.dir).project-preview 
        section.description 
          h2
            span.projectName= post.details["projectName"]
            span.divider  | 
            span.postName= ("#" + post.details["slug"] + ": " + post.details["name"])

          p= post.details["description"]

        section.picture 
          img(src= post.details["titleImagePath"], alt="title-image")


footer
  include ./template/footer.pug