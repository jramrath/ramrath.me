script.
    function copyFunc(id) {
        navigator.clipboard.writeText(document.getElementById(id).innerHTML);
    } 


mixin sectionTitle(content, num)
    h2
        span= num
        |#{content}


mixin img(src, alt)
    .img_wrapper
        img(src=src, alt=alt)



mixin codeMixin(filename, rawFilename, num, linesNum)
    .codeOrTerminal.code
        ul.buttons
            li
                span Copy to clipboard
                a.copy
                    button(onclick="copyFunc(" + num + ")")

            li 
                span Download code
                a(href= filename).downloadCode
                    button

            li 
                span See raw
                a(href= rawFilename).seeRaw
                    button

        table
            tr

                td.left
                    pre
                        code
                            - var i = 1
                            while i <= linesNum
                                |#{i}
                                - i++
                                br
                
                td.right
                    pre
                        code(id= num)
                            block

        

mixin terminalMixin(commands, num)
    .codeOrTerminal.terminal 
        ul.buttons
            li 
                span Copy to clipboard
                a.copy
                    button(onclick="copyFunc(" + num + ")")

        table
            tr
                td.left
                    pre
                        code
                            each command in commands
                                | $
                                br

                td.right
                    pre
                        code(id= num)
                            each command in commands
                                |#{command + "\n"}
                    
        


mixin pimg(imgFile)
    .doubleContents
        p 
            block
        
        img(src= imgFile)

mixin imgp(imgFile)
    .doubleContents
        img(src= imgFile)

        p 
            block
